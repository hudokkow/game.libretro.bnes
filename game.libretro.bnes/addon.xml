<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.bnes"
  name="bNES"
  version="0.83.1"
  provider-name="Libretro">
  <requires>
    <import addon="game.libretro" version="1.0.0"/>
    <import addon="game.controller.nes" version="1.0.0"/>
  </requires>
  <extension point="kodi.gameclient"
    library_android="libgame.libretro.bnes.so"
    library_linux="game.libretro.bnes.so"
    library_osx="game.libretro.bnes.dylib"
    library_windx="game.libretro.bnes.dll"
    library_wingl="game.libretro.bnes.dll">
    <platforms>NES</platforms>
    <extensions>nes</extensions>
    <allowvfs>true</allowvfs>
    <blockextract>false</blockextract>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">bNES v083</summary>
    <description>libretro port of bNES, a NES emulator.

Supported files: .nes

Authors: byuu, Ryphecha.

License: GPLv3</description>
    <platform>all</platform>
    <nofanart>true</nofanart>
  </extension>
</addon>
